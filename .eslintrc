// https://www.learnhowtoprogram.com/intermediate-javascript/test-driven-development-and-environments-with-javascript/linting-code
{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "browser": true,
    "jest": true,
    "jquery": true,
    "node": true
  },
  "rules": {
    "semi": 1,
    "indent": [
      "warn",
      2
    ],
    "no-console": "warn",
    "no-debugger": "warn"
  }
}